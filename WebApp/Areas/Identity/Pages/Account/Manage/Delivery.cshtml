@page
@model DeliveryModel
@{
}

<div class="one-item-content">
    <form method="post">
        <div class="form-row">
            <div class="col-md-6">
                <h3>Delivery options</h3>
                <div class="form-group">
                    <input type="radio" id="delivery1" name="Delivery" value="fast" checked="checked">
                    <label for="delivery1">Fast for $10</label>
                </div>
                <div class="form-group">
                    <input type="radio" id="delivery2" name="Delivery" value="cheap">
                    <label for="delivery2">Cheap for $5</label>
                </div>
                <div class="form-group">
                    <input type="radio" id="delivery3" name="Delivery" value="free">
                    <label for="delivery3">Free</label>
                </div>
            </div>
            <div class="col-md-6">
                <h3>Payment options</h3>
                <div class="form-group">
                    <input type="radio" id="payment1" name="Payment" value="card" checked="checked">
                    <label for="payment1">Credit Card</label>
                </div>
                <div class="form-group">
                    <input type="radio" id="payment2" name="Payment" value="paypal">
                    <label for="payment2">Paypal</label>
                </div>
            </div>
        </div>        
        
        <input type="submit" value="Order" />
    </form>
</div>

