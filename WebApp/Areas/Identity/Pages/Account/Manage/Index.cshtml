@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<div class="one-item-content">
    <h4>@ViewData["Title"]</h4>
    @Html.Partial("_StatusMessage", Model.StatusMessage)


    <form id="profile-form" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-row">
            <div class="col-md-4 form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="Input.Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Input.SecondName"></label>
                <input asp-for="Input.SecondName" class="form-control" />
                <span asp-validation-for="Input.SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.AddressStreet"></label>
                <input asp-for="Input.AddressStreet" class="form-control" />
                <span asp-validation-for="Input.AddressStreet" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.AddressHouseNumber"></label>
                <input asp-for="Input.AddressHouseNumber" class="form-control" />
                <span asp-validation-for="Input.AddressHouseNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="Input.AddressCity"></label>
                <input asp-for="Input.AddressCity" class="form-control" />
                <span asp-validation-for="Input.AddressCity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Input.AddressCountry"></label>
                <input asp-for="Input.AddressCountry" class="form-control" />
                <span asp-validation-for="Input.AddressCountry" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Input.AddressZip"></label>
                <input asp-for="Input.AddressZip" class="form-control" />
                <span asp-validation-for="Input.AddressZip" class="text-danger"></span>
            </div>


        </div>
        <div class="form-row">
                <input type="submit" class="btn btn-default form-control btn-save" value="Save" />
        </div>
    </form>
</div>

    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
