@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="one-item-content">
    <h2>@ViewData["Title"]</h2>

    
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Create a new account.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.SecondName"></label>
                <input asp-for="Input.SecondName" class="form-control" />
                <span asp-validation-for="Input.SecondName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>



        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.AddressStreet"></label>
                <input asp-for="Input.AddressStreet" class="form-control" />
                <span asp-validation-for="Input.AddressStreet" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.AddressHouseNumber"></label>
                <input asp-for="Input.AddressHouseNumber" class="form-control" />
                <span asp-validation-for="Input.AddressHouseNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="Input.AddressCity"></label>
                <input asp-for="Input.AddressCity" class="form-control" />
                <span asp-validation-for="Input.AddressCity" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Input.AddressCountry"></label>
                <input asp-for="Input.AddressCountry" class="form-control" />
                <span asp-validation-for="Input.AddressCountry" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Input.AddressZip"></label>
                <input asp-for="Input.AddressZip" class="form-control" />
                <span asp-validation-for="Input.AddressZip" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row"><button type="submit" class="btn btn-default form-control btn-save">Register</button></div>
    </form>
        </div>
    

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

